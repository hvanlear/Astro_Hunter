---

<header class="primary-header">
  <div class="logo-container">
    <span class="logo"><a href="/">Van Lear</a></span>
  </div>

  <button
    class="nav-toggle"
    aria-controls="primary-navigation"
    aria-expanded="false"
  >
    <svg
      stroke="var(--btn-color)"
      fill="none"
      class="hamburger"
      viewBox="-10 -10 120 120"
      width="70"
    >
      <path
        class="line"
        stroke-width="10"
        stroke-linecap="round"
        stroke-linejoin="round"
        d="m 20 40 h 60 a 1 1 0 0 1 0 20 h -60 a 1 1 0 0 1 0 -40 h 30 v 70"
      ></path>
    </svg>
  </button>
  <div class="primary-nav">
    <div class="container container-nav">
      <nav>
        <ul data-visible="false" class="flex">
          <li class="nav-link" class="active">
            <a href="/"> <span aria-hidden="true">00</span> Home</a>
          </li>
          <li class="nav-link">
            <a href="/home"> <span aria-hidden="true">00</span> Work</a>
          </li>
          <li class="nav-link">
            <a href="/home"> <span aria-hidden="true">00</span> About</a>
          </li>
          <li class="nav-link">
            <a href="/home"> <span aria-hidden="true">00</span> Contact</a>
          </li>
        </ul>
      </nav>
    </div>
    <div class="container-copyright flex flex-col gap-1">
      <span class="copy-text">Â© Copyright 2011 - 2023</span>
      <span class="copy-text">Made with Astro</span>
    </div>
  </div>
</header>

<script>
  import "../scripts/menu.js";
</script>

<style>
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  li {
    color: var(--primary-bg);
  }

  .nav-link {
    transition: background 0.3s ease-in-out;
  }

  .nav-link:hover {
    background: linear-gradient(transparent 50%, #5c02ff 50%);
  }

  .primary-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo-container {
    margin: 2rem;
  }

  .logo {
    font-size: 2rem;
    font-weight: 600;
    color: white;
    font-family: "Sohne-Halbfett";
  }

  .primary-nav[data-visible="true"] {
    transform: translateX(0%);
  }

  .primary-nav {
    list-style: none;
    z-index: 1000;
    padding: 0;
    margin: 0;
    position: fixed;
    inset: 0 0 0 0;
    background: #d5d2ce;
    backdrop-filter: blur(0.5rem);
    flex-direction: column;
    padding: min(20vh, 10rem) 2em;

    transform: translateX(100%);
    transition: transform 350ms ease-in-out;
  }

  .nav-toggle {
    --btn-color: #d5d2ce;
    overflow: hidden;
    display: block;
    position: absolute;
    aspect-ratio: 1;
    top: 2rem;
    right: 2rem;
    z-index: 9999;
  }

  .nav-toggle .hamburger {
    transition: translate 1s, rotate 1s;
  }

  .nav-toggle[aria-expanded="true"] .hamburger {
    --btn-color: var(--primary-bg);
    translate: 5px -5px;
    rotate: 0.125turn;
  }

  .nav-toggle .line {
    transition: 1s;
    stroke-dasharray: 60 31 60 300;
  }

  .nav-toggle[aria-expanded="true"] .line {
    stroke-dasharray: 60 105 60 300;
    stroke-dashoffset: -90;
  }

  .nav-toggle {
  }
</style>
